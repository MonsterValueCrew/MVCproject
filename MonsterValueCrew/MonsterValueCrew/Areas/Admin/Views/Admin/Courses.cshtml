@{
    ViewBag.Title = "Courses";
}

<section class="container">
    <section class="row z-depth-3 shadow-container">
        @using (Html.BeginForm("UploadCourse", "Admin", FormMethod.Post,
                                    new { id = "file-upload-form", @class = "uploader", enctype = "multipart/form-data" }))
        {


            <label>Materialize File Input</label>
            <div class="file-field input-field">
                <div class="btn">
                    <span>Browse</span>
                    <input type="file" />
                </div>

                <div class="file-path-wrapper">
                    <input class="file-path validate" type="text"
                           placeholder="Upload file" />
                </div>
            </div>
        }
    </section>
</section>