@model MonsterValueCrew.Areas.Admin.ViewModels.UserCourseAssignmentViewModel
@{
    ViewBag.Title = "Assignment";
}
<h2>Assign Courses</h2>
@using (Html.BeginForm("Assignment", "Admin"))
{
    <div id="container">
        <div id="ListUsers">
            @for (int i = 0; i < Model.Users.Count; i++)
                {
                <p>@Html.HiddenFor(x => Model.Users[i].Id)</p>
                <p id="userName">@Html.EditorFor(u => Model.Users[i].FirstName) @Html.DisplayFor(x => Model.Users[i].UserName) @Html.HiddenFor(x => Model.Users[i].UserName)</p>
                <p id="mandatory">@Html.LabelFor(u => Model.IsMandatory) @Html.EditorFor(u => Model.IsMandatory)</p>
                <p id="dueDate">@Html.LabelFor(u => Model.DueDate) @Html.EditorFor(u => Model.DueDate)</p>
            }
        </div>
        <div id="ListCourses">
            @for (int i = 0; i < Model.Courses.Count; i++)
                {
                <p>@Html.HiddenFor(x => Model.Courses[i].Id)</p>
                <p>@Html.EditorFor(u => Model.Courses[i].IsChecked) 
                @Html.DisplayFor(x => Model.Courses[i].Name) 
                @Html.HiddenFor(x => Model.Courses[i].Name)</p>
            }
        </div>
    </div>
    <div class="">
        <input type="submit" class="btn waves-effect" value="Assign Courses">
    </div>
}