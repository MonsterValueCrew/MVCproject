@model  MonsterValueCrew.Areas.Admin.ViewModels.UserCourseAssignmentViewModel
@{
    ViewBag.Title = "Assignment";
}
<h2>You Have Selected</h2>
@using (Html.BeginForm("Assignment", "Admin", FormMethod.Post))
{
    <div id="container2">
        <div id="users">
            @for (int i = 0; i < Model.Users.Count; i++)
            {

                if (Model.Users[i].Checked == true)
                {
                    <div>
                        @Model.Users[i].UserName
                    </div>
                }

            }
        </div>
        <div id="courses">
            @for (int i = 0; i < Model.Users.Count; i++)
            {

                if (Model.Users[i].Checked == true)
                {
                    <div>
                        @Model.Courses[i].Name
                    </div>
                }

            }
        </div>
    </div>
    <div>
        <div class="btn">@Html.ActionLink("Confirm Assignment", "AssignCourse", "Admin", new { area = "Admin" }, null)</div>
        <div class="btn">@Html.ActionLink("Choose New Assignmet", "AssignCourse", "Admin", new { area = "Admin" }, null)</div>
    </div>
}

