@model  MonsterValueCrew.Areas.Admin.ViewModels.UserCourseAssignmentViewModel
    @{
        ViewBag.Title = "Assignment";
    }
<div class="container">
    <h2>You Have Selected</h2>
    @using (Html.BeginForm("SubmitAssignment", "Admin", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <h5>Assigning current users</h5>
        <div>
            <div>
                @for (int i = 0; i < Model.Users.Count; i++)
                {

                    if (Model.Users[i].IsSelected == true)
                    {
                        <div>
                            @Model.Users[i].UserName
                        </div>
                    }

                }
            </div>
            <h5>To Course</h5>
            
        </div>
        <div>
            <div class="btn">@Html.ActionLink("Confirm Assignment", "AssignCourses", "Admin", new { area = "Admin" }, null)</div>
            <div class="btn">@Html.ActionLink("Choose New Assignmet", "AssignCourses", "Admin", new { area = "Admin" }, null)</div>
        </div>
    }

</div>