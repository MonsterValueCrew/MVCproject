@model UserViewModel

<h2>Edit user:</h2>
@using (Html.BeginForm("EditUser", "Admin", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    @Html.HiddenFor(m => m.Id)
    <div>
        @Model.UserName
    </div>   
    <div>
        @Html.LabelFor(m => m.IsAdmin)
        @Html.EditorFor(m => m.IsAdmin)
    </div>
    <div>
        <input type="submit" value="Save" />
    </div>

}

