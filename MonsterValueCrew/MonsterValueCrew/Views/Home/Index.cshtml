@using MonsterValueCrew.Controllers 
@{
    ViewBag.Title = "Home Page";
}

<div id="index-banner" class="parallax-container">
    <div class="section no-pad-bot">
        <div class="container">
            <br><br>
            <h1 class="header center teal-text text-lighten-5">Learning System</h1>
            <div class="row center">
                <h5 class="header col s12 light">A modern responsive front-end framework based on Material Design</h5>
            </div>
            <div class="row center">
                @if (this.User.Identity.IsAuthenticated)
                {
                    @Html.ActionLink("Courses", "AllCourses", "Courses", null, new { @class = "btn waves-effect teal text-lighten-2" })
                }
                else
                {
                    @Html.ActionLink("Login", "Login", "Account", null, new { @class = "btn waves-effect teal text-lighten-2" })
                }
            </div>
            <br><br>
           

        </div>
    </div>
    <div class="parallax"><img src="@Url.Content("~/Content/Images/background1.jpg")" alt="Unsplashed background img 1"></div>
</div>


<div class="container">
    <div class="section">

        <!--   Icon Section   -->
        <div class="row">
            <div class="col s12 m4">
                <div class="icon-block">
                    <h2 class="center brown-text"><i class="material-icons">flash_on</i></h2>
                    <h5 class="center">Speeds up development</h5>

                    <p class="light">Going through the Courses you will achieve new greatness and be the Best in your department. </p>
                </div>
            </div>

            <div class="col s12 m4">
                <div class="icon-block">
                    <h2 class="center brown-text"><i class="material-icons">group</i></h2>
                    <h5 class="center">User Experience Focused</h5>

                    <p class="light">By utilizing elements and principles of one of the best Leaders in Learning, we were able to create a course environment that incorporates various components and animations that provide more feedback to users. Additionally, a single underlying responsive system across all platforms allow for a more unified user experience.</p>
                </div>
            </div>

            <div class="col s12 m4">
                <div class="icon-block">
                    <h2 class="center brown-text"><i class="material-icons">settings</i></h2>
                    <h5 class="center">Easy to work with</h5>

                    <p class="light">If you have any feedback for the system be sure to contact us and we will do our best to  resolve your issues.</p>
                </div>
            </div>
        </div>

    </div>
</div>


<div class="parallax-container valign-wrapper">
    <div class="section no-pad-bot">
        <div class="container">
            <div class="row center">
                <h5 class="header col s12 light">A modern responsive Course Application based on Course Design</h5>
            </div>
        </div>
    </div>
    <div class="parallax"><img src="@Url.Content("~/Content/Images/background2.jpg")" alt="Unsplashed background img 2"></div>
</div>

<div class="container">
    <div class="section">

        <div class="row">
            <div class="col s12 center">
                <h3><i class="mdi-content-send brown-text"></i></h3>
                <h4>Contact Us</h4>
                <p class="left-align light">This is a very profound message. If you are reading this the developers of this website are either jobless or a successful programmers.<p>
            </div>
        </div>

    </div>
</div>


<div class="parallax-container valign-wrapper">
    <div class="section no-pad-bot">
        <div class="container">
            <div class="row center">
                <h5 class="header col s12 light">Never gonna give you up. Never gonna get you down. Never gonna run around and desert you. Never gonna make you cry. Never gonna asy goodby.</h5>
            </div>
        </div>
    </div>  
    <div class="parallax"><img src="@Url.Content("~/Content/Images/background3.jpg")" alt="Unsplashed background img 3"></div>
</div>
