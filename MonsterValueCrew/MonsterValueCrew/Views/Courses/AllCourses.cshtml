@model IEnumerable<TakeCourseVIewModel>
    <div class="container">
        <h3>My Courses</h3>
    </div>

<div class="container">
    @if (Model == null)
    {
        <h4>No courses are assigned to you at this point.</h4>
    }
    else
    {
        <table>
            <thead>
                <tr>
                    <th>Course Id</th>
                    <th>Course Name</th>
                    <th>Date Created</th>
                    <th>Description</th>
                    <th>Take That Course</th>

                </tr>
            </thead>

            <tbody>
                @foreach (var course in Model)
                {
                    <tr>
                        <td>
                            @course.Id
                        </td>

                        <td>
                            @course.Name
                        </td>

                        <td>
                            @course.DateAdded.Date.ToString("dd MMM yyyy")
                        </td>

                        <td>
                            @course.Description
                        </td>

                        <td>
                            @*string linkText, string actionName, string controllerName*@
                            @Html.ActionLink("Go", "TakeCourse", "Courses")
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    }
</div>
